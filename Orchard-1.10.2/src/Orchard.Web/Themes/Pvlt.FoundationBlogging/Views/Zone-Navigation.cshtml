@using Orchard.Core.Shapes
@{
    // Copy from core shape defined in CoreShapes.cs
    var tag = Tag(Model, "div");
}
@tag.StartElement
<div class="title-bar" data-responsive-toggle="main-navbar" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle></button>
    <div class="title-bar-title">Menu</div>
</div>
<div class="top-bar" id="main-navbar">
    @*<div class="top-bar-title">
            <strong>@WorkContext.CurrentSite.SiteName</strong>
        </div>*@
    <div class="top-bar-left hide-for-small-only">
        <ul class="dropdown menu" data-dropdown-menu="">
            <li class="menu-text">@WorkContext.CurrentSite.SiteName</li>
        </ul>
    </div>
    <div class="top-bar-right">
        @foreach (var item in CoreShapes.Order(Model)) {
            @Display(item)
        }
    </div>
</div>
@tag.EndElement
